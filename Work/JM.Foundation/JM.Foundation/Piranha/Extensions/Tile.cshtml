@using System.Web.Mvc.Html
@model Tile

<ul class="form">
	<li>
		@Html.LabelFor(m => m.Content)
		<div class="input">
			@Html.TextAreaFor(m => m.Content, new { rows=8, cols=20, @class="editor"})
		</div>
	</li>
	<li>
		@Html.PartialFor("ImageRegion", m => m.Image)
	</li>
	<li>
		@Html.LabelFor(m => m.Hide, "Verstecken")
		<div class="input">@Html.CheckBoxFor(m => m.Hide)</div>
		<p>Blendet das aktuelle Element vollständig aus</p>
	</li>
</ul>
