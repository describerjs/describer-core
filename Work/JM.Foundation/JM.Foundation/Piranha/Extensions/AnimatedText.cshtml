@using System.Web.Mvc.Html
@model AnimatedText

<ul class="form">
	<li>
		@Html.LabelFor(m => m.Content)
		<div class="input">
			@Html.TextAreaFor(m => m.Content, new { rows=8, cols=20, @class="editor"})
		</div>
	</li>
	<li>
		@Html.LabelFor(m => m.TextEffect, "Animation")
		<div class="input">@Html.DropDownListFor(m => m.TextEffect, Model.TextEffectSelection)</div>
		<p>Der ausgewählte Effekt wird auf das Element angewendet, wenn es durch Scrollen in den sichtbaren Bereich kommt oder ihn verlässt.</p>
	</li>
	<li>
		@Html.LabelFor(m => m.Hide, "Verstecken")
		<div class="input">@Html.CheckBoxFor(m => m.Hide)</div>
		<p>Blendet das aktuelle Element vollständig aus</p>
	</li>
</ul>
