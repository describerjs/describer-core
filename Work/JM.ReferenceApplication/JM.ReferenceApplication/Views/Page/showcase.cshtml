@using Piranha.Extend.Regions
@model Piranha.Models.PageModel
@{
	ViewBag.Title = Model.Page.Title ;
}

@section head {
<style>
.page { max-width: none; }
.page-constrained { max-width: 72rem; }
.section-onepage { background-color: #ddd; }
.section-onepage:nth-of-type(2n+1) { background-color: #eee; }

.scroll-anim .twitter { background-image: url("/img/twitter-sprite.svg"); background-size: 400px 100px; height: 100px; width: 100px; }
.scroll-anim .twitter-wing-down { background-position: 0 0; }
.scroll-anim .twitter-wing-mid-up { background-position: 1000px 0; }
.scroll-anim .twitter-wing-up { background-position: 200px 0; }
.scroll-anim .twitter-wing-mid-down { background-position: 300px 0; }
</style>
}

<section class="section-onepage">
	<div class="page-constrained">
		@Html.Partial("Regions/StageTeaser", Model.Region<Teaser>("StageTeaser"))
	</div>
</section>

<section class="section-onepage">
