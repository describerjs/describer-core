@model FaqRegion

@if(Model.Faqs != null && Model.Faqs.Any(f => !string.IsNullOrEmpty(f.Body) && !string.IsNullOrEmpty(f.Title)))
{
    <div class="accordion">
        <ul class="acc-group">
            @foreach(var faq in Model.Faqs)
            {
                <li class="acc-item">
                    <a data-jmname="accordionbox" href="#" class="acc-handle">@faq.Title</a>
                    <div class="acc-panel">
                        <p>@faq.Body</p>
                    </div>
                </li>
            }
        </ul>
    </div>
}