#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//bin/osascript" ]; then
  "$basedir//bin/osascript"  "$basedir/../imageoptim-cli/bin/imageOptimAppleScriptLib" "$@"
  ret=$?
else 
  /bin/osascript  "$basedir/../imageoptim-cli/bin/imageOptimAppleScriptLib" "$@"
  ret=$?
fi
exit $ret
