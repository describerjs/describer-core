#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//bin/bash" ]; then
  "$basedir//bin/bash"  "$basedir/../imageoptim-cli/bin/imageOptim" "$@"
  ret=$?
else 
  /bin/bash  "$basedir/../imageoptim-cli/bin/imageOptim" "$@"
  ret=$?
fi
exit $ret
