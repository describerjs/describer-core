@using JM.ReferenceApplication.Areas.JMTools.Models
@model List<Trace>

<div class="well well-sm">@Model.Count Ergebnisse <button type="button" class="close" id="clearResults"><span aria-hidden="true">&times;</span><span class="sr-only">löschen</span></button></div>

<table class="table table-striped table-condensed table-bordered">
    <tr>
        @foreach(var p in typeof(Trace).GetProperties())
        {
            <th data-sort="asc" id="@p.Name">@p.Name</th>
        }
    </tr>   
    @foreach(var row in Model)
    {
        <tr>
            @foreach(var p in typeof(Trace).GetProperties())
            {
                <td>@p.GetValue(row)</td>
            }
        </tr>
    }
</table>